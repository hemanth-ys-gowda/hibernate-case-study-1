<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"> <!-- bean definitions here -->

<bean id="productservice" class="com.jsp.service.Productservice" autowire="byName"></bean>
<bean id="ProductDao" class="com.jsp.dao.ProductDao"></bean>

<bean id="cartservice" class="com.jsp.service.Cartservice" autowire="byType" ></bean>
<bean id="CartDao" class="com.jsp.dao.CartDao"></bean>

</beans>